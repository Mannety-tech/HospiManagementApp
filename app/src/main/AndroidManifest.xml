<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.leedstrinity.hospimanagementapp">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:label="HospiManagementApp"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HospiManagementApp"
        android:networkSecurityConfig="@xml/network_security_config">

        <!-- Entry point -->
        <activity android:name=".LandingActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main hub -->
        <activity android:name=".MainActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="hospiapp" android:host="open" />
            </intent-filter>
        </activity>

        <!-- Patient flow -->
        <activity android:name=".PatientLoginActivity" android:exported="true" />
        <activity android:name=".SignupActivity" android:exported="true" />
        <activity android:name=".PatientDashboardActivity" android:exported="true" />
        <activity android:name=".BookAppointmentActivity" android:exported="true" />
        <activity android:name=".AppointmentListActivity" android:exported="true" />
        <activity android:name=".ViewAppointmentsActivity" android:exported="true" />
        <activity android:name=".ResetPasswordActivity" android:exported="true" />
        <activity android:name=".LoginActivity" android:exported="true" />
        <activity android:name=".PatientVitalsActivity" android:exported="true" />
        <activity android:name=".RecordVitalActivity" android:exported="true" />
        <activity android:name=".PatientDetailsActivity" android:exported="true" />

        <!-- Admin flow -->
        <activity android:name=".AdminLoginActivity" android:exported="false" />
        <activity android:name=".AdminPortalActivity" android:exported="true" />
        <activity android:name=".PatientRegistrationActivity" android:exported="false" />
        <activity android:name=".PatientRecordActivity" android:exported="false" />
        <activity android:name=".ClinicalRecordActivity" android:exported="false" />
        <activity android:name=".ClinicianFormActivity" android:exported="false" />
        <activity android:name=".ClinicianListActivity" android:exported="false" />
        <activity android:name=".RegisterPatientActivity" android:exported="true" />

        <!-- Biometric / session -->
        <activity android:name=".BiometricAuthActivity" android:exported="false" />
        <!-- Ensure ClearSessionActivity path matches your actual package -->
        <activity android:name=".ClearSessionActivity" android:exported="false" />

        <!-- Optional appointment feature module -->
        <!-- Remove if you only use BookingFragment -->
        <activity android:name=".feature.appointments.ui.BookingActivity" android:exported="false" />

    </application>
</manifest>












