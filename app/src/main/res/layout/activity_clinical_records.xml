<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Patient & Clinical Record Inputs -->
        <EditText
            android:id="@+id/editTextPatientName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Patient Name"
            android:inputType="textPersonName"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/editTextDiagnosis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Diagnosis"
            android:inputType="text"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/editTextTreatment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Treatment Plan"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/editTextNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Additional Notes"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:layout_marginBottom="24dp" />

        <!-- Action Buttons -->
        <Button
            android:id="@+id/buttonSaveRecord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Clinical Record"
            android:layout_marginBottom="16dp" />

        <!-- Navigation Buttons grouped horizontally -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/buttonBackToAppointments"
                android:text="Appointments"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp" />

            <Button
                android:id="@+id/buttonClinicianForm"
                android:text="Clinician Form"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp" />

            <Button
                android:id="@+id/buttonClinicianList"
                android:text="Clinician List"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>

