<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvRecordedAt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recorded: --"
        android:textStyle="bold"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tvHeartRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Heart Rate: -- bpm"/>

    <TextView
        android:id="@+id/tvBloodPressure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Blood Pressure: -- mmHg"/>

    <TextView
        android:id="@+id/tvTemperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Temperature: -- Â°C"/>

    <TextView
        android:id="@+id/tvOxygenLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Oxygen Level: -- %"/>
</LinearLayout>




