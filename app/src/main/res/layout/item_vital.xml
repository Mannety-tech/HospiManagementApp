<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Recorded date/time -->
        <TextView
            android:id="@+id/tvRecordedAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recorded: 2025-12-06 12:00"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:paddingBottom="6dp" />

        <!-- Heart Rate -->
        <TextView
            android:id="@+id/tvHeartRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heart Rate: 72 bpm"
            android:textSize="16sp"
            android:paddingBottom="4dp" />

        <!-- Blood Pressure -->
        <TextView
            android:id="@+id/tvBloodPressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood Pressure: 120/80 mmHg"
            android:textSize="16sp"
            android:paddingBottom="4dp" />

        <!-- Temperature -->
        <TextView
            android:id="@+id/tvTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temperature: 36.8 Â°C"
            android:textSize="16sp"
            android:paddingBottom="4dp" />

        <!-- Respiratory Rate -->
        <TextView
            android:id="@+id/tvRespRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Respiratory Rate: 16 breaths/min"
            android:textSize="16sp"
            android:paddingBottom="4dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>



