<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2424D1">

    <!-- NHS Logo Placeholder -->
    <TextView
        android:id="@+id/tvNHSPlaceholder"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="@drawable/nhs_placeholder"
        android:text="NHS"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_centerInParent="true"/>

    <!-- Biometric Face Login Button -->
    <Button
        android:id="@+id/btnBiometricLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login with Face"
        android:layout_alignParentBottom="true"
        android:layout_margin="24dp"
        android:backgroundTint="#3F51B5"
        android:textColor="@android:color/white"/>

    <!-- Create Account Button -->
    <Button
        android:id="@+id/btnSignupPatient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:layout_above="@id/btnBiometricLogin"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#4CAF50"
        android:textColor="@android:color/white"/>

    <!-- Login Button -->
    <Button
        android:id="@+id/btnLoginPatient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_above="@id/btnSignupPatient"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#2196F3"
        android:textColor="@android:color/white"/>
</RelativeLayout>




