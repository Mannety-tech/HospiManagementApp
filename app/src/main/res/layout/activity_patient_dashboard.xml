<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="24dp">

    <!-- Welcome message -->
    <TextView
        android:id="@+id/tvWelcomePatient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Patient Dashboard"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- Patient details greeting -->
    <TextView
        android:id="@+id/tvPatientDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient details will appear here"
        android:textSize="16sp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvWelcomePatient"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Book Appointment -->
    <Button
        android:id="@+id/btnBookAppointment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Book Appointment"
        android:backgroundTint="#2196F3"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/tvPatientDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- View Appointments -->
    <Button
        android:id="@+id/btnViewAppointments"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="View Appointments"
        android:backgroundTint="#FF9800"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/btnBookAppointment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

